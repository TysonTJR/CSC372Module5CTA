package csc372module5cta;

public class ProductRecursion {
	private int[]num = new int[5];	
	private int a = 5;
	private int productOfNums;
	
	
	
	public ProductRecursion (int[] num) {
		this.num = num;
		
	}
	
	public int recursiveMethod(int a) {
		if(a < 0){
			return 0;
			
		}else {
			productOfNums = num[a] * recursiveMethod(num[a-1]);
			
			
	
			

		}
		return productOfNums;
	}
	
	public int getProductOfNums() {
		return this.productOfNums;
	}
	
}
	


